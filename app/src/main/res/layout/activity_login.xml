<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Image placeholder in the middle -->
            <ImageView
                android:layout_width="112dp"
                android:layout_height="85dp"
                android:layout_gravity="center"
                android:layout_marginTop="90dp"
                android:contentDescription="appLogo"

                />

            <!-- "Увійти" text on the left side -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="30dp"
                android:text="Увійти"
                android:textColor="@color/green_dark"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Email field -->

            <EditText
                android:id="@+id/login_email"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/border"
                android:drawableStart="@drawable/ic_baseline_email_24"
                android:drawablePadding="8dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:padding="8dp" />


            <EditText
                android:id="@+id/login_password"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/border"
                android:drawableStart="@drawable/ic_baseline_lock_24"
                android:drawablePadding="8dp"
                android:hint="Введіть пароль"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:padding="8dp" />


            <!-- Sign-in button -->
            <Button

                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="#2196F3"
                android:text="Увійти"
                android:textColor="@color/white"
                app:cornerRadius="30dp"
                tools:ignore="TextContrastCheck" />

<!--            <TextView-->

<!--                android:id="@+id/login_button"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="15dp"-->
<!--                android:background="@color/white"-->
<!--                android:text="Увійти за допомогою Google"-->
<!--                android:textColor="@color/green_dark"-->
<!--                app:cornerRadius="30dp"-->
<!--                tools:ignore="TextContrastCheck" />-->

            <!--             "Чи використайте" text with Google sign-in button -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:text="Чи використайте"
                android:textColor="#8e8e8e"
                android:textSize="14sp" />

            <Button
                android:id="@+id/google_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:background="@color/brown_light"

                android:text="Google"
                android:textColor="@color/white"
                tools:ignore="TextContrastCheck" />

            "Забули пароль?" and "Зареєструватись" text with buttons

            <Button
                android:id="@+id/signupRedirectText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="96dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/transparent"
                android:text="Зареєструватись"
                android:textColor="#4c7a34"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:padding="8dp"
                android:text="Забули пароль?"
                android:textAlignment="center"
                android:textColor="#000000"

                android:textSize="14sp" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>